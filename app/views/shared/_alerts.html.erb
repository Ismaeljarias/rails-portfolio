<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: 'Ismael Arias Portfolio', sticky: false) %>
  <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: 'Ismael Arias Portfolio', sticky: false) %>
  <% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: 'Ismael Arias Portfolio', sticky: false) %>
<% end %>